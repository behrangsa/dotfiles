{
  "name": "adocify",
  "version": "1.0.0",
  "description": "Convert Markdown to AsciiDoc using AI-powered analysis",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "asciidoc",
    "documentation",
    "conversion",
    "ai",
    "deepseek"
  ],
  "author": "behrangsa",
  "license": "MIT",
  "dependencies": {
    "openai": "^4.67.3",
    "glob": "^11.0.0",
    "p-limit": "^6.1.0",
    "commander": "^12.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "adocify": "./dist/index.js"
  }
}