[all]
title = All tasks
filterexpr = 
sortexpr = desc:priority

[due_today]
title = Due today
filterexpr = due:today
sortexpr = asc:due

[overdue]
title = Overdue tasks
filterexpr = due:<today
sortexpr = +priority,-due

[chores]
title = Chores
filterexpr = +Chores
sortexpr = desc:priority

[to_read_list]
title = To Read
filterexpr = +ToRead
sortexpr = desc:priority

[reading_list]
title = Reading
filterexpr = +Reading
sortexpr = desc:priority

[read_list]
title = Read List
filterexpr = +Read
