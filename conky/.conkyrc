conky.config = {
    -- Window settings
    alignment = 'top_right',
    double_buffer = true,

    -- Border settings
    border_width = 2,
    border_inner_margin = 10,
    border_outer_margin = 0,
    draw_borders = true,

    -- Text and color settings
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_outline = false,
    draw_shades = false,
    draw_graph_borders = true,
    extra_newline = false,
    font = 'JetBrainsMono Nerd Font Mono:13, DejaVu Sans Mono:size=13',
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,

    -- Window position and size
    gap_x = 20,
    gap_y = 50,
    minimum_height = 1370,
    maximum_height = 1370,
    minimum_width = 640,
    maximum_width = 640,

    -- Performance settings
    cpu_avg_samples = 2,
    net_avg_samples = 2,
    no_buffers = true,
    update_interval = 5.0, -- Update every 5 seconds

    -- Window properties
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop', -- Draw directly on the desktop background
    own_window_argb_visual = true, -- True transparency support
    own_window_argb_value = 120, -- Set transparency level (0=invisible, 255=opaque)

    -- Output settings
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,

    -- Custom colors for graphs/bars
    -- These are still useful for setting default_color or for use with ${color ...}
    color1 = '00FFFF',  -- cyan (e.g., titles)
    color2 = '00FF00',  -- green (e.g., normal state)
    color3 = 'FF0000',  -- red (e.g., high usage, warnings)
    color4 = '33CCFF',  -- light blue (e.g., CPU graph)
}

conky.text = [[
${color1}${font JetBrainsMono Nerd Font Mono:bold:size=14}VIM TIPS${font}${color}

${execpi 300 $HOME/Projects/github.com/behrangsa/dotfiles/conky/vim_tips_processor.sh}

${color1}${font JetBrainsMono Nerd Font Mono:bold:size=14}SENSORY INFORMATION${font}${color}

${color2}CPU: ${execpi 10 sensors k10temp-pci-00c3 2>/dev/null | grep Tctl | awk '{print $2}' || echo "N/A"}${goto 320}${color2}NVMe: ${execpi 10 sensors nvme-pci-0100 2>/dev/null | grep Composite | awk '{print $2}' || echo "N/A"}
${color2}GPU: ${execpi 10 sensors amdgpu-pci-0400 2>/dev/null | grep edge | awk '{print $2}' || echo "N/A"}${goto 320}${color2}ACPI: ${execpi 10 sensors acpitz-acpi-0 2>/dev/null | grep temp1 | awk '{print $2}' || echo "N/A"} 
${color2}GPU Pwr: ${execpi 10 sensors amdgpu-pci-0400 2>/dev/null | grep PPT | awk '{print $2, $3}' || echo "N/A"}${goto 320}${color2}BAT: ${execpi 30 sensors BAT1-acpi-0 2>/dev/null | grep in0 | awk '{print $2, $3}' || echo "N/A"}

${color1}${font JetBrainsMono Nerd Font Mono:bold:size=14}CPU USAGE${font}${color}

${color}${font JetBrainsMono Nerd Font Mono:bold:size=11}Total CPU Usage${font}${color}
${color2}Usage: ${cpu cpu0}%${alignr}${color2}Frequency: ${freq_g}GHz

${color}${font JetBrainsMono Nerd Font Mono:bold:size=11}Core Usage${font}${color}
${color2}1: ${cpu cpu1}%${goto 110}2: ${cpu cpu2}%${goto 220}3: ${cpu cpu3}%${goto 330}4: ${cpu cpu4}%${goto 440}5: ${cpu cpu5}%${goto 550}6: ${cpu cpu6}%
${color2}${cpubar cpu1 6,80}${goto 110}${cpubar cpu2 6,80}${goto 220}${cpubar cpu3 6,80}${goto 330}${cpubar cpu4 6,80}${goto 440}${cpubar cpu5 6,80}${goto 550}${cpubar cpu6 6,80}

${color}${font JetBrainsMono Nerd Font Mono:bold:size=11}Top Processes${font}${color}
${color2}Name${goto 190} PID${goto 252}  CPU%${goto 320}  MEM%${alignr}Time
${color}${top name 1}${goto 190}${top pid 1}${goto 252}${top cpu 1}${goto 322}${top mem 1}${alignr}${top time 1}
${color}${top name 2}${goto 190}${top pid 2}${goto 252}${top cpu 2}${goto 322}${top mem 2}${alignr}${top time 2}
${color}${top name 3}${goto 190}${top pid 3}${goto 252}${top cpu 3}${goto 322}${top mem 3}${alignr}${top time 3}

${color1}${font JetBrainsMono Nerd Font Mono:bold:size=14}DISK USAGE${font}${color}

${color}${font JetBrainsMono Nerd Font Mono:bold:size=11}Root Filesystem${font}${color}
${color2}${fs_used /} / ${fs_size /}${alignr}${color2}${fs_used_perc /}%
${color2}${fs_bar /}${color}
${if_mounted /home}${color}${font JetBrainsMono Nerd Font Mono:bold:size=11}Home Partition${font}${color}
${color2}${fs_used /home} / ${fs_size /home}${alignr}${color2}${fs_used_perc /home}%
${color2}${fs_bar /home}${color}${endif}
${color}${font JetBrainsMono Nerd Font Mono:bold:size=11}I/O Activity${font}${color}
${color2}Read:${color} ${diskio_read}${alignr}${color2}Write:${color} ${diskio_write}
${color4}${diskiograph_read 30,300 33CCFF 33CCFF}${alignr}${color4}${diskiograph_write 30,300 33CCFF 33CCFF}
]]
