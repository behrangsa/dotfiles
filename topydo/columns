[all]
title = All tasks
filterexpr = 
sortexpr = desc:priority

[due_today]
title = Due today
filterexpr = due:today
sortexpr = asc:due

[overdue]
title = Overdue tasks
filterexpr = due:<today
sortexpr = +priority,-due

[chores]
title = Chores
filterexpr = +Chores
sortexpr = desc:priority

[reading_list]
title = Reading list
filterexpr = +Read
sortexpr = desc:priority

