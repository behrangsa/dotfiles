conky.config = {
    -- Window settings
    alignment = 'top_right',
    double_buffer = true,

    -- Border settings
    border_width = 2,
    border_inner_margin = 10,
    border_outer_margin = 0,
    draw_borders = true,

    -- Text and color settings
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_outline = false,
    draw_shades = false,
    draw_graph_borders = true,
    extra_newline = false,
    font = 'Maple Mono:size=14',
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,

    -- Window position and size
    gap_x = 20,
    gap_y = 50,
    minimum_height = 1370,
    maximum_height = 1370,
    minimum_width = 640,
    maximum_width = 640,

    -- Performance settings
    cpu_avg_samples = 2,
    net_avg_samples = 2,
    no_buffers = true,
    update_interval = 5.0, -- Update every 5 seconds

    -- Window properties
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop', -- Draw directly on the desktop background
    own_window_argb_visual = true, -- True transparency support
    own_window_argb_value = 120, -- Set transparency level (0=invisible, 255=opaque)

    -- Output settings
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,

    -- Custom colors for graphs/bars
    -- These are still useful for setting default_color or for use with ${color ...}
    color1 = '00FFFF',  -- cyan (e.g., titles)
    color2 = '00FF00',  -- green (e.g., normal state)
    color3 = 'FF0000',  -- red (e.g., high usage, warnings)
    color4 = '33CCFF',  -- light blue (e.g., CPU graph)
}

conky.text = [[
${color1}${font Maple Mono:ExtraBold:size=18}SENSORY INFORMATION${font}${color}

${color2}CPU: ${execpi 10 sensors k10temp-pci-00c3 2>/dev/null | grep Tctl | awk '{print $2}' || echo "N/A"}${alignr}${color2}NVMe: ${execpi 10 sensors nvme-pci-0100 2>/dev/null | grep Composite | awk '{print $2}' || echo "N/A"}
${color2}GPU: ${execpi 10 sensors amdgpu-pci-0400 2>/dev/null | grep edge | awk '{print $2}' || echo "N/A"}${alignr}${color2}ACPI: ${execpi 10 sensors acpitz-acpi-0 2>/dev/null | grep temp1 | awk '{print $2}' || echo "N/A"}
${color2}GPU Pwr: ${execpi 10 sensors amdgpu-pci-0400 2>/dev/null | grep PPT | awk '{print $2, $3}' || echo "N/A"}${alignr}${color2}BAT: ${execpi 30 sensors BAT1-acpi-0 2>/dev/null | grep in0 | awk '{print $2, $3}' || echo "N/A"}

${color2}Total CPU Usage: ${cpu cpu0}%${alignr}${color2}Frequency: ${freq_g}GHz

${font Maple Mono:ExtraBold}${color2}Name${goto 220}PID${goto 340}CPU%${goto 460}MEM%${alignr}Time${font}
${color}${top name 1}${goto 220}${top pid 1}${goto 320}${top cpu 1}${goto 440}${top mem 1}${alignr}${top time 1}
${color}${top name 2}${goto 220}${top pid 2}${goto 320}${top cpu 2}${goto 440}${top mem 2}${alignr}${top time 2}
${color}${top name 3}${goto 220}${top pid 3}${goto 320}${top cpu 3}${goto 440}${top mem 3}${alignr}${top time 3}
${color}${top name 4}${goto 220}${top pid 4}${goto 320}${top cpu 4}${goto 440}${top mem 4}${alignr}${top time 4}


${font Maple Mono:ExtraBold:size=18}${color}Disk usage${color}${font}
${color2}${fs_used /} / ${fs_size /}${alignr}${color2}${fs_used_perc /}%
${color2}${fs_bar /}${color}

${font Maple Mono:ExtraBold:size=18}${color}I/O Activity${color}${font}
${color2}Read:${color} ${diskio_read}${alignr}${color2}Write:${color} ${diskio_write}
${color4}${diskiograph_read 30,300 33CCFF 33CCFF}${alignr}${color4}${diskiograph_write 30,300 33CCFF 33CCFF}
]]
