conky.config = {
    -- Window settings
    alignment = 'top_left',
    double_buffer = true,

    -- Border settings
    border_width = 2,
    border_inner_margin = 10,
    border_outer_margin = 0,
    draw_borders = true,

    -- Text and color settings
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_outline = false,
    draw_shades = false,
    draw_graph_borders = true,
    extra_newline = false,
    font = 'Maple Mono NF:size=10',
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,

    -- Image settings
    imlib_cache_size = 0,

    -- Window position and size
    gap_x = 20,
    gap_y = 50,
    minimum_height = 1370,
    minimum_width = 500,
    maximum_width = 500,

    -- Performance settings
    cpu_avg_samples = 2,
    net_avg_samples = 2,
    no_buffers = true,
    update_interval = 5.0,

    -- Window properties
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    own_window_argb_visual = true,
    own_window_argb_value = 128,

    -- Output settings
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,

    -- Custom colors for graphs/bars
    -- These are still useful for setting default_color or for use with ${color ...}
    color1 = '00FFFF',  -- cyan (e.g., titles)
    color2 = '00FF00',  -- green (e.g., normal state)
    color3 = 'FF0000',  -- red (e.g., high usage, warnings)
    color4 = '33CCFF',  -- light blue (e.g., CPU graph)
}

conky.text = [[
${color1}${font Maple Mono NF:ExtraBold:size=12}Sensory Information${font}${color}
${color2}
${execpi 10 sensors.sh 1}
${execpi 10 sensors.sh 2}
${color}
#
${font Maple Mono NF:ExtraBold:size=12}${color2}Name${goto 275}PID${goto 355}CPU%${goto 473}MEM%${alignr}Time${font}${color}
${top name 1}${goto 220}${top pid 1}${goto 320}${top cpu 1}${goto 440}${top mem 1}${alignr}${top time 1}
${top name 2}${goto 220}${top pid 2}${goto 320}${top cpu 2}${goto 440}${top mem 2}${alignr}${top time 2}
${top name 3}${goto 220}${top pid 3}${goto 320}${top cpu 3}${goto 440}${top mem 3}${alignr}${top time 3}
${top name 4}${goto 220}${top pid 4}${goto 320}${top cpu 4}${goto 440}${top mem 4}${alignr}${top time 4}

${font Maple Mono NF:ExtraBold:size=12}${color1}Disk usage${color}${font}${color2}
${fs_used /} / ${fs_size /}${alignr}${fs_used_perc /}%
${fs_bar /}
${color}
#
${font Maple Mono NF:ExtraBold:size=12}${color1}I/O Activity${color}${font}${color2}
Read: ${diskio_read}${alignr} Write: ${diskio_write}
${diskiograph_read 20,200 33CCFF 33CCFF}${alignr}${diskiograph_write 20,200 33CCFF 33CCFF}
${color}
#
${font Maple Mono NF:ExtraBold:size=12}${color1}Network Statistics${color}${font}
${execpi 300 vnstati.sh}
${image /tmp/vnstati-d31.png -p 0,560}
${image /tmp/vnstati-h24.png -p 0,681}
${image /tmp/vnstati-m1.png  -p 0,911}
]]
